<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.example.android.deprecure.ScreenTestSlideFragment">

    <TextView
        android:id="@+id/test_slide_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Not at all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

    <Button
        android:text="Several days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="More than half the days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Nearly every day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
